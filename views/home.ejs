<html lang="en">

<head>
    <title>
        <%= title %>
    </title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background-color: #000;
            overflow-x: hidden;
        }

        section {
            position: relative;
            width: 100%;
            height: 100vh;
            overflow: hidden;
            cursor: pointer;
            /* shows user can click */
        }

        video {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            filter: brightness(70%);
            transition: filter 0.5s ease;
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.6));
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: #fff;
            padding: 20px;
        }

        .overlay h2 {
            font-size: 2.8rem;
            margin-bottom: 30px;
            text-shadow: 0 3px 8px rgba(0, 0, 0, 0.5);
        }

        .overlay p {
            font-size: 1.2rem;
            margin-bottom: 45px;
            line-height: 1.6;
            opacity: 0.9;
            max-width: 600px;
        }

        .overlay button {
            background: #ffcf40;
            color: #222;
            border: none;
            padding: 14px 36px;
            font-size: 1.05rem;
            border-radius: 30px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .overlay button:hover {
            background: #ffd866;
            transform: scale(1.07);
            box-shadow: 0 0 15px rgba(255, 255, 255, 0.4);
        }
    </style>
</head>

<body>
    <section id="heroSection">
        <video id="bgVideo" autoplay loop muted playsinline>
            <source src="/videos/Test.mp4" type="video/mp4">
            Your browser doesn't support the video tag.
        </video>

        <div class="overlay">
            <h2>Find Peace Where the Mountains Whisper</h2>
            <p>Eco guest house nestled in the heart of Kunnur. Experience nature, silence, and comfort â€” all in one
                place.</p>
            <button id="bookBtn">Book Your Stay</button>
        </div>
    </section>

    <script>
        const video = document.getElementById("bgVideo");
        const heroSection = document.getElementById("heroSection");
        const bookBtn = document.getElementById("bookBtn");

        let soundPlayed = false;

        heroSection.addEventListener("click", (event) => {
            // Prevent unmuting if button was clicked
            if (event.target === bookBtn) return;

            // Unmute on first click only
            if (!soundPlayed) {
                video.muted = false;
                video.play();
                soundPlayed = true;
                return
            }
            if (soundPlayed) {
                video.muted = true;
                soundPlayed = false;
                return
            }
        });

        bookBtn.addEventListener("click", () => {
            // Normal booking action
            alert("Redirecting to booking page...");
        });
    </script>
</body>

</html>